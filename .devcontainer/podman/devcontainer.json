{
  "name": "ansible-dev-container-podman",
  // "image": "ghcr.io/ansible/community-ansible-dev-tools:latest",
  "build": {
    "dockerfile": "../Containerfile",
    "context": "../.."
  },
  "workspaceFolder": "/workspace/ansible_collections/code_kaizen/cloudflare",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/ansible_collections/code_kaizen/cloudflare,type=bind,consistency=cached",
  "containerUser": "podman",
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--cap-add=SYS_RESOURCE",
    "--device",
    "/dev/fuse",
    "--security-opt",
    "seccomp=unconfined",
    "--security-opt",
    "label=disable",
    "--security-opt",
    "apparmor=unconfined",
    "--userns=host",
    "--hostname=ansible-dev-container",
    "--volume",
    "ansible-dev-tools-container-storage:/var/lib/containers"
  ],
  "postAttachCommand": "pre-commit install;",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible"
      ]
    }
  }
}
